<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellRegisConfirm"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매 가격을 적어주세요."
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/et_sell_regis_input_price_registerd"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/edit_text_search"
        android:hint="  (단위: 원)" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마지막으로 확인해주세요."
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 등록 후에는 수정 및 삭제가 불가능합니다."
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 이용규칙에 어긋날 경우 삭제됩니다."
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 판매 이후 [판매완료]를 눌러주시기 바랍니다."
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/btn_sell_register"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="동의 및 등록하기"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_sell_regis_blue"
        android:enabled="true"
        android:layout_marginBottom="150dp"/>

</LinearLayout>