<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordInfo"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="독서 기록 정보를 입력해주세요."
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="독서 시작일"
            android:textColor="#000000"
            android:textSize="18sp" />
        <Spinner
            android:id="@+id/sps_year"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_date_started"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dialog" />
        <Spinner
            android:id="@+id/sps_month"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_date_started"
            android:layout_toRightOf="@id/sps_year"
            android:layout_marginTop="10dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dialog" />
        <Spinner
            android:id="@+id/sps_day"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_date_started"
            android:layout_toRightOf="@id/sps_month"
            android:layout_marginTop="10dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/tv_date_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sps_year"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="독서 종료일"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spf_year"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dialog"
            android:layout_below="@id/tv_date_finished"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp" />
        <Spinner
            android:id="@+id/spf_month"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dialog"
            android:layout_below="@id/tv_date_finished"
            android:layout_toRightOf="@id/spf_year"
            android:layout_marginTop="10dp" />
        <Spinner
            android:id="@+id/spf_day"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dialog"
            android:layout_below="@id/tv_date_finished"
            android:layout_toRightOf="@id/spf_month"
            android:layout_marginTop="10dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_record_info_to_describe"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="다음"
        android:textSize="18sp"
        android:layout_marginBottom="80dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_sell_regis_blue"/>

</LinearLayout>