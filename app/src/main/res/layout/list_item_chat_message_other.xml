<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp">

    <View
        android:id="@+id/v_profile_color"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/view_circle_blue" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/v_profile_color"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:textColor="#000000"
        android:textSize="15sp"
        android:background="@drawable/tv_message_box_gray"
        android:layout_below="@id/tv_nick_name"
        android:layout_toRightOf="@id/v_profile_color"
        android:layout_marginLeft="16dp"
        android:padding="12dp"
        android:maxWidth="250dp"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.11.01"
        android:textSize="12sp"
        android:layout_toRightOf="@id/tv_message"
        android:layout_marginLeft="8dp"
        android:layout_above="@id/tv_time"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:50"
        android:textSize="12sp"
        android:layout_toRightOf="@id/tv_message"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@id/tv_message"/>

</RelativeLayout>