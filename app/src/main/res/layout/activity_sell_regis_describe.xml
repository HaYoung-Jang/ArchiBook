<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellRegisDescribe"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="책의 실제 사진을 찍어주세요."
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"/>

    <ImageButton
        android:id="@+id/ibtn_camera"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/btn_camera"
        android:scaleType="fitCenter"
        android:background="#FFFFFF"
        android:layout_marginBottom="15dp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="책 판매에 관한 설명을 적어주세요."
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_sell_regis_describe"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:hint="( 500자 이내)"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/edit_text_search"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btn_sell_regis_next"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="다음"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_sell_regis_blue"
        android:enabled="true"
        android:layout_marginBottom="40dp"/>

</LinearLayout>