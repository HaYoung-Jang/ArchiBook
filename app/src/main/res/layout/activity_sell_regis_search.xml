<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellRegisSearch"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매하실 책을 검색하세요."
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <Spinner
            android:id="@+id/sp_sell_regis_search_select"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dialog" />

        <EditText
            android:id="@+id/et_sell_regis_search"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:hint="   "
            android:background="@drawable/edit_text_search"/>

        <ImageButton
            android:id="@+id/ibtn_search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/btn_search"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_sell_regis_search_no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색 결과가 없습니다."
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_sell_regis_search_no_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색어를 입력해주세요."
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/lv_sell_regis_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

