<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:background="#FFFFFF">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:minHeight="?attr/actionBarSize"
            android:layout_gravity="top">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="판매 등록"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold"></TextView>


        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떤 책을 판매하시나요?"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"/>

            <Button
                android:id="@+id/btn_sell_regis_barcode"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:text="카메라로 바코드 스캔"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_sell_regis_blue"/>

            <Button
                android:id="@+id/btn_sell_regis_search"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:text="ISBN 혹은 책 제목으로 검색"
                android:textSize="20sp"
                android:textColor="#757575"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_sell_regis_white"/>

            <Button
                android:id="@+id/btn_sell_regis_input"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:text="수동으로 정보 입력"
                android:textSize="20sp"
                android:textColor="#757575"
                android:layout_marginBottom="150dp"
                android:background="@drawable/button_sell_regis_white"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>